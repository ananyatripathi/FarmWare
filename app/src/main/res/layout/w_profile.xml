<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffffff"
    >




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:layout_below="@+id/search"
                android:columnOrderPreserved="false"
                android:layout_marginTop="65dp"
                android:id="@+id/temperature"
                android:useDefaultMargins="true"
                android:rowCount="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="8dp"
                    android:padding="10dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/namehead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textStyle="bold"
                            android:textSize="24sp"
                            android:textColor="#000000"
                            android:layout_marginTop="22dp"/>

                        <ImageView
                            android:id="@+id/edit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_edit_foreground"
                            android:layout_toRightOf="@id/namehead"
                            android:layout_marginLeft="270dp"
                            />


                        <ImageView
                            android:layout_below="@+id/edit"
                            android:layout_width="150dp"
                            android:layout_height="120dp"
                            android:src="@drawable/warehouseprofilepic"
                            android:layout_toRightOf="@id/namehead"
                            android:layout_marginLeft="150dp"
                            />


                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ravi Kumar"
                            android:layout_below="@+id/namehead"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/warehead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Warehouse Name"
                            android:textStyle="bold"
                            android:layout_below="@+id/name"
                            android:textSize="24sp"
                            android:textColor="#000000"
                            android:layout_marginTop="22dp"/>

                        <TextView
                            android:id="@+id/warehousename"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hari Om Warehouse"
                            android:layout_below="@+id/warehead"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/addresshead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textStyle="bold"
                            android:layout_below="@+id/warehousename"
                            android:textSize="24sp"
                            android:textColor="#000000"
                            android:layout_marginTop="22dp"/>

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1/267 Vikrant Khand Gomtinagar, Lucknow"
                            android:layout_below="@+id/addresshead"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/pin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="226010"
                            android:layout_below="@+id/address"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp"/>
                        <RatingBar
                            android:id="@+id/rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/pin"
                            android:layout_marginTop="30dp"
                            android:numStars="5"
                            android:rating="4"
                            />

                        <ImageView
                            android:id="@+id/logouticon"
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_logout_foreground"
                            android:layout_below="@+id/rating"
                            android:layout_marginTop="70dp"
                        />


                        <TextView
                            android:id="@+id/logout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logout"
                            android:layout_below="@+id/rating"
                            android:layout_toRightOf="@+id/logouticon"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginTop="70dp"/>











                    </RelativeLayout>







                </androidx.cardview.widget.CardView>

            </GridLayout>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
