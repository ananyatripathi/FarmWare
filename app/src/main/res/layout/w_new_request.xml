<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffffff"
    >




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <include layout="@layout/toolbar" />

            <TextView
                android:id="@+id/request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Request"
                android:textStyle="bold"
                android:textSize="35dp"
                android:layout_marginTop="70dp"
                android:layout_centerHorizontal="true"
                />


            <TextView
                android:id="@+id/namehead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_below="@+id/request"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_marginTop="35dp"/>

            <ImageView
                android:layout_below="@+id/request"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/farmer"
                android:layout_toRightOf="@id/namehead"
                android:layout_marginLeft="150dp"
                />


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ravi Kumar"
                android:layout_below="@+id/namehead"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>



            <TextView
                android:id="@+id/addresshead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textStyle="bold"
                android:layout_below="@+id/name"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_marginTop="22dp"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/267 Vikrant Khand Gomtinagar, Lucknow"
                android:layout_below="@+id/addresshead"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="226010"
                android:layout_below="@+id/address"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/quantityhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textStyle="bold"
                android:layout_below="@+id/pin"
                android:textSize="24sp"
                android:textColor="#000000"
                android:layout_marginTop="22dp"/>

            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rice      300kg"
                android:layout_below="@+id/quantityhead"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/quantity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wheatt      500kg"
                android:layout_below="@+id/quantity"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_check_foreground"
                android:layout_below="@+id/quantity2"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cross_foreground"
                android:layout_toRightOf="@+id/right"
                android:layout_below="@+id/quantity2"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="100dp"/>






        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
