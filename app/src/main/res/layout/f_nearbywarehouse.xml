            <include layout="@layout/f_homepage_toolbar"
                android:id="@+id/fertilizertoolbar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Warehouses Near You"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_margin="10dp"
                android:textStyle="italic"
                android:textFontWeight="20"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:layout_marginTop="10dp"
                android:useDefaultMargins="true"
                android:columnOrderPreserved="false"
                android:rowCount="5">


                <!-- Row 1 -->
                <!-- Column 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/warehouse1name"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:text="Hari Om Warehouse"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:layout_marginTop="8dp"
                            android:textFontWeight="600"/>
                        <TextView
                            android:id="@+id/warehouse1storage"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:text="1000kg Storage available"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#000000"
                            android:layout_below="@+id/warehouse1name"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/warehouse1location"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:text="1/267 Vikrant Khand Gomtinagar"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#000000"
                            android:layout_below="@+id/warehouse1storage"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/warehouse1distance"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:text="5 kms"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#000000"
                            android:layout_below="@+id/warehouse1location"
                            android:textSize="15sp" />
                        <TextView
                            android:id="@+id/warehouse1phone"
                            android:layout_width="230dp"
                            android:layout_height="wrap_content"
                            android:text="8840626029"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#000000"
                            android:layout_below="@+id/warehouse1distance"
                            android:textSize="15sp" />
                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/warehouse1phone"
                            android:numStars="5"
                            android:theme="@style/RatingBar"
                            android:rating="4"
                            android:stepSize="1"
                            style="?android:attr/ratingBarStyleSmall"
                            />

                        <ImageView
                            android:id="@+id/plumberIv"
                            android:layout_toRightOf="@+id/warehouse1name"
                            android:layout_width="120dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/warehouseprofilepic"/>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
