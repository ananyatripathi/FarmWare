                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
