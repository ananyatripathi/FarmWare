<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <include layout="@layout/toolbar"
        android:id="@+id/logintoolbar"/>

    <ImageView
        android:id="@+id/loginlogo"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center"
        android:src="@drawable/finalfulllogo"
        />


    <EditText
        android:id="@+id/mobno"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:hint="Phone Number"
        android:textColor="#000000"
        android:textAlignment="center"
        android:background="#11100F0F"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginlogo"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        />
    
    <Button
        android:id="@+id/getotpbtn"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobno"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Get OTP"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/corneredbutton"/>


    <EditText
        android:id="@+id/enterotp"
        android:layout_width="match_parent"
        android:layout_below="@+id/getotpbtn"
        android:textAlignment="center"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="#11100F0F"
        android:inputType="number"
        android:textColor="#000000"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="Enter OTP"
        />

    <Button
        android:id="@+id/verifyotpbtn"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterotp"
        android:layout_marginTop="10dp"
        android:background="@drawable/corneredbutton"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Verify"
        />

    <TextView
        android:id="@+id/noaccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:textSize="14sp"
        android:text="Don't have a account?"
        android:layout_marginTop="20px"
        android:layout_below="@id/verifyotpbtn"
        />

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:text="Register!"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/verifyotpbtn" />



</RelativeLayout>