<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#ffffff"
    >




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <include layout="@layout/toolbar" />

                        <TextView
                            android:id="@+id/namehead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textStyle="bold"
                            android:padding="10dp"
                            android:textSize="24sp"
                            android:textColor="#000000"
                            android:layout_marginTop="75dp"/>

                        <ImageView
                            android:id="@+id/edit"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_edit_foreground"
                            android:layout_toRightOf="@id/namehead"
                            android:layout_marginLeft="270dp"
                            />


                        <ImageView
                            android:layout_below="@+id/edit"
                            android:layout_width="150dp"
                            android:layout_marginTop="40dp"
                            android:padding="10dp"
                            android:layout_height="120dp"
                            android:src="@drawable/farmer"
                            android:layout_toRightOf="@id/namehead"
                            android:layout_marginLeft="150dp"
                            />


                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ravi Kumar"
                            android:padding="10dp"
                            android:layout_below="@+id/namehead"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp"/>



                        <TextView
                            android:id="@+id/addresshead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textStyle="bold"
                            android:padding="10dp"
                            android:layout_below="@+id/name"
                            android:textSize="24sp"
                            android:textColor="#000000"
                            android:layout_marginTop="22dp"/>

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:text="1/267 Vikrant Khand Gomtinagar, Lucknow"
                            android:layout_below="@+id/addresshead"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/pin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="226010"
                            android:padding="10dp"
                            android:layout_below="@+id/address"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/quantityhead"
                            android:layout_width="wrap_content"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:text="Quantity"
                            android:textStyle="bold"
                            android:layout_below="@+id/pin"
                            android:textSize="24sp"
                            android:textColor="#000000"
                            android:layout_marginTop="22dp"/>

                        <TextView
                            android:id="@+id/quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rice      300kg"
                            android:padding="10dp"
                            android:layout_below="@+id/quantityhead"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/quantity2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wheatt      500kg"
                            android:padding="10dp"
                            android:layout_below="@+id/quantity"
                            android:textSize="18sp"
                            android:textColor="#000000"
                            android:layout_marginTop="10dp"/>



        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
